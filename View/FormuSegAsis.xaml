<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asis_Batia.View.FormuSegAsis"
             Title="BIOMETA">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackPageCommand}"/>
    </Shell.BackButtonBehavior>
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.1" Color="#FFFFFF"/>
            <GradientStop Offset="1.0" Color="#3775B5"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        <VerticalStackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#D4BC88" VerticalOptions="Fill" Scale="1"/>
            <VerticalStackLayout  
            Spacing="1"
            Padding="20,1"
            Margin="5,0,0,0"
            HorizontalOptions="Center"
            VerticalOptions="Start">
                <Label Text="Seleccione solo una opcion de envio:"
                   FontSize="30"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontFamily="Regular"
                   TextColor="#2E3192"
                   TranslationY="-20"/>
                <StackLayout RadioButtonGroup.SelectedValue="{Binding SelectionRadio}"
                              TranslationY="-10">
                    <RadioButton Content="A Asistencia" CheckedChanged="RadioButton_CheckedChanged" Value="A"/>
                    <RadioButton Content="D Doblete" CheckedChanged="RadioButton_CheckedChanged" Value="D"/>
                    <RadioButton Content="F Falta" CheckedChanged="RadioButton_CheckedChanged" Value="F"/>
                    <RadioButton Content="V Vacaciones" CheckedChanged="RadioButton_CheckedChanged" Value="V"/>
                    <RadioButton Content="IEG Incapacidad General" CheckedChanged="RadioButton_CheckedChanged" Value="IEG"/>
                    <RadioButton Content="IRT Incapacidad Riesgo de Trabajo" CheckedChanged="RadioButton_CheckedChanged" Value="IRT"/>
                    <RadioButton Content="N Descanso" CheckedChanged="RadioButton_CheckedChanged" Value="N"/>
                </StackLayout>
                <Label Text="Adjunta: incapacidad, formato de vaciones, justificante, Etc..."
                   FontSize="25"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontFamily="Regular"
                   TextColor="#2E3192"
                        TranslationY="-5"/>
                <Button 
                    
                    x:Name="btn_archivo"
                    Text="Archivo"
                     TranslationY="5"
                    Command="{Binding LoadFileCommand}">
                </Button>
                <Button 
                    x:Name="btn_camara"
                    Text="Foto"
                    TranslationY="10"
                   Command="{Binding PhotoCommand}">
                </Button>
                <Entry
                    Grid.Row="11"
                    Grid.ColumnSpan="2"
                     TranslationY="15"
                    
            Placeholder="captura informacion adicional" Text="{Binding RespuestaTxt}"/>
                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#D4BC88" VerticalOptions="Fill" Scale="1"/>
