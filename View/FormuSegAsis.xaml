<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asis_Batia.View.FormuSegAsis"
             Title="FormuSegAsis">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackPageCommand}"/>
    </Shell.BackButtonBehavior>
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.1" Color="#FFFFFF"/>
            <GradientStop Offset="1.0" Color="#3775B5"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <ScrollView>
        
            <VerticalStackLayout            
            Spacing="1"
            Padding="20,50"
            Margin="5,0,0,0"
            HorizontalOptions="Center"
            VerticalOptions="Start">
                <Label Text="Seleccione solo una opcion de envio:"
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontFamily="Regular"
                   TextColor="#2E3192"/>
                <StackLayout RadioButtonGroup.SelectedValue="{Binding SelectionRadio}">
                    <RadioButton Content="A Asistencia" CheckedChanged="RadioButton_CheckedChanged" Value="A Asistencia"/>
                    <RadioButton Content="D Doblete" CheckedChanged="RadioButton_CheckedChanged" Value="D Doblete"/>
                    <RadioButton Content="F Falta" CheckedChanged="RadioButton_CheckedChanged" Value="F Falta"/>
                    <RadioButton Content="V Vacaciones" CheckedChanged="RadioButton_CheckedChanged" Value="V Vacaciones"/>
                    <RadioButton Content="IEG Incapacidad General" CheckedChanged="RadioButton_CheckedChanged" Value="IEG Incapacidad General"/>
                    <RadioButton Content="IRT Incapacidad Riesgo de Trabajo" CheckedChanged="RadioButton_CheckedChanged" Value="IRT Incapacidad Riesgo de Trabajo"/>
                    <RadioButton Content="N Descanso" CheckedChanged="RadioButton_CheckedChanged" Value="N Descanso"/>
                </StackLayout>
                <Label Text="Adjunta: incapacidad, formato de vaciones, justificante, Etc..."
                   FontSize="20"
                   FontAttributes="Bold"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   FontFamily="Regular"
                   TextColor="#2E3192"/>
                <Button 
                    x:Name="btn_archivo"
                    Text="Archivo"
                    Command="{Binding LoadFileCommand}">
                </Button>
                <Button 
                    x:Name="btn_camara"
                    Text="Foto"
                    Clicked="btn_camara_Clicked">

                </Button>

                <Entry
                    Grid.Row="11"
                    Grid.ColumnSpan="2"
            Placeholder="captura informacion adicional" Text="{Binding RespuestaTxt}"/>
                <Button 
                x:Name="bntNext3"
                Text="Siguiente"
                Clicked="bntNext3_Clicked"
                FontSize="Large"
                BackgroundColor="#D4BC88"
                TextColor="White"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                CornerRadius="10"
                TranslationY="50"
                WidthRequest="200"
                HeightRequest="50"
                Command="{Binding RegisterCommand}"/>
            </VerticalStackLayout>
    </ScrollView>

</ContentPage>