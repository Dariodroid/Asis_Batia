<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Asis_Batia.View.RegExitoso"
             Title="Registro Exitoso">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Offset="0.1" Color="#FFFFFF"/>
            <GradientStop Offset="1.0" Color="#3775B5"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    <VerticalStackLayout            
           Spacing="1"
           Padding="20,50"
           Margin="5,0,0,0"
           HorizontalOptions="Center"
           VerticalOptions="Center">
        <Image
           Source="entrada.png"
           VerticalOptions="Center"
           HorizontalOptions="Center"
           TranslationX="0"
           TranslationY="0"
           WidthRequest="400"
           HeightRequest="400"/>
        <Button 
                x:Name="bntNext4"
                Text="SALIR"
                Clicked="bntNext4_Clicked"
                FontSize="Large"
                BackgroundColor="#D4BC88"
                TextColor="White"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                CornerRadius="11"
                TranslationY="20"
                WidthRequest="200"
                HeightRequest="50"
            >
        </Button>

    </VerticalStackLayout>

</ContentPage>